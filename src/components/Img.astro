---
import { addUrlPrefix } from 'src/lib/content';

export interface Props extends astroHTML.JSX.ImgHTMLAttributes {
  src: string;
}

const { src: rawSrc, ...props } = Astro.props;

const src = addUrlPrefix(import.meta.env.BASE_URL, rawSrc.toString());
---

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>

<img src={src} {...props} />
